<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Slide Presentation</title>
    <link rel='stylesheet' type='text/css' href='css/app.css' />
    <link rel='stylesheet' type='text/css' media='print' href='js/reveal.js/css/print/pdf.css' />
  </head>
  <body>
    <div class='reveal'>
      <div class='slides'>
        {% for slide in slides %}
          {% if slide.children %}
            <section>
            {% for childSlide in slide.children %}
              {% include childSlide.partial %}
            {% endfor %}
            </section>
          {% else %}
            {% include slide.partial %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <script type='text/javascript' src='js/app.js'></script>
  </body>
</html>
